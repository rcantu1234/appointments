<p id="notice"><%= notice %></p>

<h1>Administration</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Date of birth</th>
      <th>City</th>
      <th>State</th>
      <th>Zip Code</th>
      <th>Urgency</th>
      <th>Appt time</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.first_name.capitalize %></td>
        <td><%= appointment.last_name.capitalize %></td>
        <td><%= appointment.age %></td>
        <td><%= appointment.date_of_birth %></td>
        <td><%= appointment.city %></td>
        <td><%= appointment.state %></td>
        <td><%= appointment.zip_code %></td>
        <td><%= appointment.urgency %></td>
        <td><%= appointment.appt_time.to_formatted_s(:long) %></td>
        <td><%= appointment.note %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

